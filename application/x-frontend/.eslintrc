{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": ["plugin:vue/vue3-recommended", "eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "parser": "@typescript-eslint/parser",
    "allowImportExportEverywhere": true
  },
  "plugins": ["@typescript-eslint"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.ts", "*.vue"],
      "rules": {
        "no-undef": "off",
        "vue/attributes-order": "off"
      }
    }
  ]
}
